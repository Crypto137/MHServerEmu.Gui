<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="200"
        x:Class="MHServerEmu.Gui.Avalonia.Views.Dialogs.TextInputWindow"
        Title="Enter Text"
        Width="500" Height="200" CanResize="False" CanMinimize="False"
        WindowStartupLocation="CenterOwner"
        Activated="Window_Activated">

  <Grid RowDefinitions="* auto auto 60 *" ColumnDefinitions="* *" Margin="24" ColumnSpacing="8" RowSpacing="8">
	  <TextBlock x:Name="LabelTextBlock" Grid.Row="1" Grid.ColumnSpan="2">Enter Text:</TextBlock>
      <TextBox x:Name="InputTextBox" Grid.Row="2" Grid.ColumnSpan="2">Placeholder</TextBox>
      <Button x:Name="OKButton" Click="OKButton_Click" IsDefault="True" Grid.Row="3" Grid.Column="0">OK</Button>
      <Button x:Name="CancelButton" Click="CancelButton_Click" IsCancel="True" Grid.Row="3" Grid.Column="1">Cancel</Button>
  </Grid>

</Window>
