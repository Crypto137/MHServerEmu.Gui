<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="220"
        x:Class="MHServerEmu.Gui.Avalonia.Views.Dialogs.MessageBoxWindow"
        Title="Title"
        Width="500" Height="220" CanResize="False" CanMinimize="False"
        WindowStartupLocation="CenterOwner">

  <Window.Styles>
      <Style Selector="TextBlock">
          <Setter Property="VerticalAlignment" Value="Center"/>
          <Setter Property="TextWrapping" Value="Wrap" />
      </Style>
  </Window.Styles>

  <Grid RowDefinitions="* 60" ColumnDefinitions="* *" Margin="24" ColumnSpacing="8" RowSpacing="8">
	  <TextBlock x:Name="MessageTextBlock" Grid.Row="0" Grid.ColumnSpan="2">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</TextBlock>
      <Button x:Name="OKButton" Click="OKButton_Click" IsDefault="True" Grid.Row="1" Grid.Column="0">OK</Button>
      <Button x:Name="CancelButton" Click="CancelButton_Click" IsCancel="True" Grid.Row="1" Grid.Column="1">Cancel</Button>
  </Grid>

</Window>
