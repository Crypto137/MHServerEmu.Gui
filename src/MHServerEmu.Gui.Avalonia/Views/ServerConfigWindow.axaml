<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="640"
        x:Class="MHServerEmu.Gui.Avalonia.Views.ServerConfigWindow"
        Title="Server Configuration"
        Width="1024" Height="640" MinWidth="1024" MinHeight="640" CanMinimize="False"
        WindowStartupLocation="CenterOwner">

  <Grid RowDefinitions="* auto" Margin="24" RowSpacing="8">
      <Grid ColumnDefinitions="300 *">
          <ListBox x:Name="ConfigSectionListBox" SelectionChanged="ConfigSectionListBox_SelectionChanged" SelectionMode="Single, AlwaysSelected" Grid.Column="0" Grid.RowSpan="2">
              <ListBoxItem>SectionName1</ListBoxItem>
              <ListBoxItem>SectionName2</ListBoxItem>
              <ListBoxItem>SectionName3</ListBoxItem>
          </ListBox>
          <ListBox x:Name="ConfigSettingsListBox" DoubleTapped="ConfigSettingsListBox_DoubleTapped" Grid.Column="1">
              <ListBoxItem FontWeight="Bold">SettingName1: Value1</ListBoxItem>
              <ListBoxItem>SettingName2: Value2</ListBoxItem>
              <ListBoxItem>SettingName3: Value3</ListBoxItem>
          </ListBox>
      </Grid>

      <Grid Grid.Row="1" ColumnDefinitions="* *" RowDefinitions="60" ColumnSpacing="8">
		  <Button Grid.Column="0" x:Name="ApplyButton" Click="ApplyButton_Click">Apply</Button>
		  <Button Grid.Column="1" x:Name="CancelButton" Click="CancelButton_Click" IsCancel="True">Cancel</Button>
      </Grid>
  </Grid>

</Window>
